<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.rakibofc.androidtoolbox">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidToolbox">
        <activity
            android:name=".NotebookResetPassword"
            android:exported="false" />
        <activity
            android:name=".NotebookSignUp"
            android:exported="false" />
        <activity
            android:name=".NotebookLogin"
            android:exported="false" />
        <activity
            android:name=".Timer"
            android:exported="false" />
        <activity
            android:name=".Stopwatch"
            android:exported="false" />
        <activity
            android:name=".AudioPlayerActivity"
            android:exported="false" />
        <activity
            android:name=".PDFReader"
            android:exported="false" />
        <activity
            android:name=".SystemInfoActivity"
            android:resizeableActivity="true"
            android:supportsPictureInPicture="true"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation"
            android:exported="false"
            tools:targetApi="n" />
        <activity
            android:name=".Notebook"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>